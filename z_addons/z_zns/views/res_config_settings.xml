<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="z_res_config_settings_zns_view_form" model="ir.ui.view">
        <field name="name">z.res.config.settings.view.form.inherit.hr</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='performance']" position="after">
                <block title="Zns config" name="system_zns_config">
                     <setting id="system_zns_setting_app_id">
                        <field name="z_system_zns_app_id"/>
                    </setting>
                     <setting id="system_zns_setting_secret_key">
                        <field name="z_system_zns_secret_key"/>
                    </setting>
                    <setting id="system_zns_setting_access_token">
                        <field name="z_system_zns_access_token"/>
                    </setting>
                    <setting id="system_zns_setting_refresh_token">
                        <field name="z_system_zns_refresh_token"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
