<odoo>
    <data>
        <record id="z_re_lens_form_view" model="ir.ui.view">
            <field name="name">z_ophthalmology.re_lens.form</field>
            <field name="model">z_ophthalmology.re_lens</field>
            <field name="arch" type="xml">
                <form string="Contact lens reexamination" name="Re Lens Template" delete="False" duplicate="False" create="False">
                    <field name="code" invisible="1"/>
                    <field name="examination_type" invisible="1"/>
                    <field name="is_editable" invisible="1"/>
                    <sheet string="Re Lens">
                        <notebook>
                            <page string="General Information" name="general">
                                <div class="row gy-3">
                                    <div class="col-3">
                                        <div class="o_form_label mb-1">Optometrist</div>
                                        <field name="optometrist_id" string="" class="w-100" readonly="not is_editable"/>
                                    </div>
                                    <div class="col-3">
                                        <div class="o_form_label mb-1">Examiner</div>
                                        <field name="examiner_id" string="" class="w-100" readonly="not is_editable"/>
                                    </div>
                                    <div class="col-3">
                                        <div class="o_form_label mb-1">Examination date</div>
                                        <field name="examination_date" string="" class="w-100" readonly="1" force_save="1"/>
                                    </div>
                                    <div class="col-3" style="pointer-events: none;opacity: 0.5;">
                                        <div class="o_form_label mb-1">Code</div>
                                        <field name="code" string="" class="w-100" readonly="1"/>
                                    </div>
                                    <div class="col-12">
                                        <div class="row gy-2">
                                            <div class="col-12">
                                                <table class="examination-form w-100">
                                                    <thead>
                                                        <tr>
                                                            <th />
                                                            <th>Right eye</th>
                                                            <th>Left eye</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                         <td>Visual acuity treated with KTX</td>
                                                            <td>
                                                                <field widget="char_field_bs" readonly="not is_editable" placeholder="Right eye: 0,00"
                                                                    name="right_eye_ktx" />
                                                            </td>
                                                            <td>
                                                                <field widget="char_field_bs" readonly="not is_editable" placeholder="Left eye: 0,00"
                                                                   name="left_eye_ktx" />
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>ORx</td>
                                                            <td>
                                                                <field widget="char_field_bs" readonly="not is_editable" placeholder="Right eye: 0,00"
                                                                    name="right_eye_orx" />
                                                            </td>
                                                            <td>
                                                                <field widget="char_field_bs" readonly="not is_editable" placeholder="Left eye: 0,00"
                                                                    name="left_eye_orx" />
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>Eyeball axis length (mm)</td>
                                                            <td>
                                                                <field widget="char_field_bs" readonly="not is_editable" placeholder="Right eye: 0,00"
                                                                    name="right_eye_eyeball_axis_length" />
                                                            </td>
                                                            <td>
                                                                <field widget="char_field_bs" readonly="not is_editable" placeholder="Left eye: 0,00"
                                                                        name="left_eye_eyeball_axis_length" />
                                                            </td>
                                                        </tr>
                                                       <tr>
                                                            <td>SHV</td>
                                                            <td>
                                                                <field widget="char_field_bs" readonly="not is_editable" placeholder="Right eye: 0,00"
                                                                    name="right_eye_shv" />
                                                            </td>
                                                            <td>
                                                                <field widget="char_field_bs" readonly="not is_editable" placeholder="Left eye: 0,00"
                                                                    name="left_eye_shv" />
                                                            </td>
                                                       </tr>
                                                    </tbody>
                                                </table>
                                            </div>

                                            <div class="col-12">
                                                <div class="o_form_label mb-1">Result</div>
                                                <field readonly="not is_editable" rows="3" name="result" widget="text_field_bs" class="w-100" placeholder="Input result"/>
                                            </div>
                                            <div class="col-12">
                                                <div class="o_form_label mb-1">Note medical exam</div>
                                                <field rows="3" name="note_medical_exam" widget="text_field_bs" readonly="not is_editable" class="w-100" placeholder="Input note" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="row gy-2">
                                            <h3 class="col-12 mb-0 fw-bolder">CLS designation</h3>
                                            <div class="col-12">
                                                <field readonly="not is_editable" name="cls_ids" widget="many2many_checkboxes"/>
                                            </div>
                                            <div class="col-12">
                                                <div class="o_form_label mb-1">Solution</div>
                                                <field readonly="not is_editable" name="solution" string="" class="w-100" widget="text_field_bs" placeholder="Input solution"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="row gy-2">
                                            <h3 class="col-12 mb-0 fw-bolder">Next visit</h3>
                                            <div class="col-3">
                                                <div class="o_form_label mb-1">Reexamination date</div>
                                                <field readonly="not is_editable" name="reexamination_date" string="" class="d-block form-control trans-input" placeholder="Select reexamination date" />
                                            </div>
                                            <div class="col-12">
                                                <div class="o_form_label mb-1">Note</div>
                                                <field readonly="not is_editable" rows="3" name="note" widget="text_field_bs" class="w-100" placeholder="Input content"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </page>
                            <page string="Prescription" name="prescription">
                                <field name="drug_ids" readonly="not is_editable">
                                    <tree editable="bottom">
                                        <field name="product_id" can_create="True" can_write="True"/>
                                        <field name="quantity"/>
                                        <field name="unit"/>
                                        <field name="usage_id"/>
                                    </tree>
                                </field>
                            </page>
                            <div class="oe_chatter">
                                <field name="message_follower_ids" />
                                <field name="activity_ids" />
                                <field name="message_ids" />
                            </div>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="z_re_lens_list_view" model="ir.ui.view">
            <field name="name">z_ophthalmology.re_lens.list</field>
            <field name="model">z_ophthalmology.re_lens</field>
            <field name="arch" type="xml">
                <tree string="Re lens" js_class="no_selector_tree">
                    <field name="examination_date"/>
                    <field name="reason"/>
                    <field name="optometrist_id"/>
                    <field name="examiner_id"/>
                    <field name="reexamination_date"/>
                </tree>
            </field>
        </record>

        <record id="z_re_lens_action" model="ir.actions.act_window">
            <field name="name">Re lens examination</field>
            <field name="view_mode">tree,form</field>
            <field name="res_model">z_ophthalmology.re_lens</field>
            <field name="domain">[('customer_id','=',active_id)]</field>
            <field name="context">{'create': False}</field>
        </record>
    </data>
</odoo>
