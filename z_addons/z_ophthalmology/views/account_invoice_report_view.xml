        <record id="z_view_account_invoice_report_search" model="ir.ui.view">
            <field name="name">z_view_account_invoice_report_search</field>
            <field name="model">account.invoice.report</field>
            <field name="inherit_id" ref="account.view_account_invoice_report_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='creditnote']" position="after">
                    <field string="Cơ sở" name="place_id"/>
                    <filter string="Cơ sở Bạch Mai" name="place_bachmai" domain="[('place_id','ilike', 'Bạch Mai')]"/>
                    <filter string="Cơ sở Tôn Đức Thắng" name="place_tdt" domain="[('place_id','ilike', 'Tôn Đức Thắng')]"/>
                    <filter string="Tất cả cơ sở" name="place_all" domain="[('place_id','!=', False)]"/>
                </xpath>
            </field>
        </record>

        <record id="account.action_account_invoice_report_all" model="ir.actions.act_window">
            <field name="view_mode">pivot,graph</field>
        </record>

    </data>
