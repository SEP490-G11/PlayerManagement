<odoo>
    <data>
        <record id="z_invoice_form_view_glass_order_inherit" model="ir.ui.view">
            <field name="name">account.move.form.glass.order.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="domain">[('is_combo', '=', False), ('is_glass_order', '=', False), '|', ('sale_ok', '=', context.get('default_move_type') in ('out_invoice', 'out_refund', 'out_receipt')), ('purchase_ok', '=', True)]</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
