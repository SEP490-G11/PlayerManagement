<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="z_glass_order.VisitStateSelection">
        <select class="o_input pe-3" t-on-change="onChange" t-on-click.stop="() =&gt; {}" t-att-id="props.id">
            <t t-foreach="hierarchyOptions" t-as="option" t-key="option[0]">
                <option t-att-selected="option[0] == value" t-att-value="stringify(option[0])" t-out="option[1]"/>
            </t>
        </select>
    </t>
</templates>
