<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="z_product_category_list_view" model="ir.ui.view">
        <field name="name">z_product_category_list_view</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_list_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="categ_code"/>
            </xpath>
        </field>
    </record>
    <record id="z_product_category_form_view" model="ir.ui.view">
        <field name="name">z_product_category_form_view</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="categ_code"/>
            </xpath>
        </field>
    </record>

</odoo>
