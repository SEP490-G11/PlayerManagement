<odoo>

    <!-- TREE VIEW -->
    <record id="view_match_tree" model="ir.ui.view">
        <field name="name">football.match.tree</field>
        <field name="model">football.match</field>
        <field name="arch" type="xml">
            <tree>
                <field name="season_id"/>
                <field name="match_date"/>
                <field name="match_end"/>
                <field name="home_team_id"/>
                <field name="away_team_id"/>
                <field name="home_score"/>
                <field name="away_score"/>
                <field name="state"/>
            </tree>
        </field>
    </record>


    <!-- FORM VIEW -->
    <record id="view_match_form" model="ir.ui.view">
        <field name="name">football.match.form</field>
        <field name="model">football.match</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="season_id"/>
                        <field name="match_date"/>
                        <field name="match_end"/>
                        <field name="home_team_id"/>
                        <field name="away_team_id"/>
                        <field name="home_score"/>
                        <field name="away_score"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- CALENDAR VIEW (QUAN TRỌNG) -->
    <record id="view_match_calendar" model="ir.ui.view">
        <field name="name">football.match.calendar</field>
        <field name="model">football.match</field>
        <field name="arch" type="xml">
            <calendar string="Match Calendar"
                      date_start="match_date"
                      date_stop="match_end"
                      color="home_team_id">
                <field name="home_team_id"/>
                <field name="away_team_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>


    <!-- ACTION -->
    <record id="action_match" model="ir.actions.act_window">
        <field name="name">Lịch thi đấu</field>
        <field name="res_model">football.match</field>
        <field name="view_mode">calendar,tree,form</field>
    </record>

</odoo>