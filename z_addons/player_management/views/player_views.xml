<odoo>

    <!-- TREE VIEW -->
    <record id="view_player_tree" model="ir.ui.view">
        <field name="name">football.player.tree</field>
        <field name="model">football.player</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="team_id"/>
                <field name="age"/>
                <field name="position"/>
                <field name="number"/>
                <field name="nationality"/>
                <field name="market_value"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_player_form" model="ir.ui.view">
        <field name="name">football.player.form</field>
        <field name="model">football.player</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <field name="name"/>
                        <field name="team_id"/>
                        <field name="age"/>
                        <field name="position"/>
                        <field name="number"/>
                        <field name="nationality"/>
                        <field name="market_value"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- KANBAN VIEW -->
    <record id="view_player_kanban" model="ir.ui.view">
        <field name="name">football.player.kanban</field>
        <field name="model">football.player</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="image"/>
                <field name="team_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <img t-if="record.image.raw_value"
                                 t-att-src="kanban_image('football.player','image',record.id.value)"
                                 class="oe_avatar"/>
                            <div><strong><field name="name"/></strong></div>
                            <div><field name="team_id"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- GRAPH VIEW -->
    <record id="view_player_graph" model="ir.ui.view">
        <field name="name">football.player.graph</field>
        <field name="model">football.player</field>
        <field name="arch" type="xml">
            <graph string="Giá trị cầu thủ theo đội" type="bar">
                <field name="team_id"/>
                <field name="market_value" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_player" model="ir.actions.act_window">
        <field name="name">Cầu thủ</field>
        <field name="res_model">football.player</field>
        <field name="view_mode">kanban,tree,form,graph</field>
    </record>

</odoo>