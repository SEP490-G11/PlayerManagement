<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="z_combo_category_form_view" model="ir.ui.view">
        <field name="name">z_combo.combo.category.form</field>
        <field name="model">z_combo.combo.category</field>
        <field name="arch" type="xml">
            <form class="oe_form_configuration">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Category"/>
                        <h1><field name="name" placeholder="E.g. Myopia Treatment (3 months)"/></h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="z_combo_category_list_view" model="ir.ui.view">
        <field name="name">z_combo.combo.category.list</field>
        <field name="model">z_combo.combo.category</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Combo Categories">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="z_combo_category_search_view" model="ir.ui.view">
        <field name="name">z_combo.combo.category.search</field>
        <field name="model">z_combo.combo.category</field>
        <field name="arch" type="xml">
            <search string="Combo Categories">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="z_combo_category_action_form" model="ir.actions.act_window">
        <field name="name">Combo Categories</field>
        <field name="res_model">z_combo.combo.category</field>
        <field name="search_view_id" ref="z_combo_category_search_view"/>
        <field name="view_id" ref="z_combo_category_list_view"/>
    </record>
</odoo>
