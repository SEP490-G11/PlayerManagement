<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="z_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="z_partner.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[1]" position="after">
                <page name="visits" string="Purchased Combo" invisible="not id">
                    <field name="purchased_combo_line_ids">
                        <tree create="0" editable="bottom" delete="0">
                            <field name="indicated_date" readonly="is_completed"/>
                            <field name="appointment_id" readonly="is_completed"/>
                            <field name="sub_combo_id" readonly="1"/>
                            <field name="combo_id" readonly="1"/>
                            <field name="product_id" readonly="1" widget="block_advance_search"/>
                            <field name="quantity" readonly="1"  widget="block_advance_search"/>
                            <field name="indicated_doctor" readonly="is_completed"/>
                            <field name="is_indicated" readonly="is_completed"/>
                            <field name="is_completed" string="HoÃ n thÃ nh" readonly="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>