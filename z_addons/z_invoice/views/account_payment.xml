<odoo>
    <record id="account_payment_form_inherit_combined" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.combined</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
    
          <!-- Smart button for invoices -->
          <xpath expr="//div[@name='button_box']" position="inside">
            <button name="action_view_invoices"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-file-text-o"
                    invisible="invoice_count == 0 or not partner_id or reconciled_invoice_ids or state == 'draft'">
              <field name="invoice_count" widget="statinfo" string="Invoice can be paid"/>
            </button>
          </xpath>
    
          <!-- Change string for payment_method_line_id -->
          <xpath expr="//field[@name='payment_method_line_id']" position="attributes">
            <attribute name="string">Loại thanh toán</attribute>
            <attribute name="invisible">1</attribute>
            
          </xpath>
    
          <!-- Set readonly for ref if cancelled -->
          <xpath expr="//field[@name='ref']" position="attributes">
            <attribute name="readonly">[('state', '=', 'cancel')]</attribute>
          </xpath>
    
          <!-- Hide mark_as_sent and action_draft buttons -->
          <xpath expr="//button[@name='mark_as_sent']" position="attributes">
            <attribute name="invisible">1</attribute>
          </xpath>
          <xpath expr="//button[@name='action_draft']" position="attributes">
            <attribute name="invisible">1</attribute>
          </xpath>
    
          <!-- Add is_prepayment after payment_type -->
          <xpath expr="//field[@name='payment_type']" position="after">
            <field name="is_prepayment" invisible="payment_type == 'outbound'" readonly="state != 'draft'" widget="boolean_toggle"/>
            <field name="reconciled_invoice_ids" invisible="1"/>
          </xpath>
    
          <!-- Add explanation after ref -->
          <xpath expr="//field[@name='ref']" position="after">
            <field name="explanation" readonly="not id"/>
          </xpath>
          <xpath expr="//field[@name='partner_id'][1]" position="attributes">
            <attribute name="domain">[('is_customer', '=', True)]</attribute>
            <attribute name="required">1</attribute>
          </xpath>
          <!-- Set readonly for partner_bank_id if cancelled -->
          <xpath expr="//field[@name='partner_bank_id'][last() - 0]" position="attributes">
            <attribute name="readonly">[('state', '=', 'cancel')]</attribute>
          </xpath>
          <xpath expr="//field[@name='partner_bank_id'][last() - 1]" position="attributes">
            <attribute name="readonly">[('state', '=', 'cancel')]</attribute>
          </xpath>
          <xpath expr="//field[@name='partner_bank_id'][last() - 2]" position="attributes">
            <attribute name="readonly">[('state', '=', 'cancel')]</attribute>
          </xpath>
        </field>
      </record>

      <record id="z_invoice_account_move_payments_inherit" model="ir.ui.view">
        <field name="name">z.invoice.account.payment.list.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="default_order">create_date desc, id desc</attribute>
            </xpath>
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="journal_name"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="computed_date"/>
                <field name="computed_name"/>
            </xpath>
            <xpath expr="//field[@name='journal_id']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='date']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>