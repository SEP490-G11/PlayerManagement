<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="bulk_operation_log_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="z_invoice.bulk_operation_log_report_document"/>
            </t>
        </t>
    </template>

    <template id="bulk_operation_log_report_document">
        <t t-call="web.external_layout">
            <div class="page">
                <div class="row">
                    <div class="col-12">
                        <h2>Bulk Operation Report</h2>
                        <div class="row mt-4">
                            <div class="col-6">
                                <strong>Operation Name:</strong> <span t-field="o.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Operation Type:</strong> <span t-field="o.operation_type"/>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-6">
                                <strong>User:</strong> <span t-field="o.user_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Status:</strong> <span t-field="o.state"/>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-6">
                                <strong>Start Time:</strong> <span t-field="o.start_time"/>
                            </div>
                            <div class="col-6">
                                <strong>End Time:</strong> <span t-field="o.end_time"/>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-6">
                                <strong>Duration:</strong> <span t-field="o.duration"/> seconds
                            </div>
                            <div class="col-6">
                                <strong>Total Records:</strong> <span t-field="o.total_records"/>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-6">
                                <strong>Success Count:</strong> <span t-field="o.success_count" class="text-success"/>
                            </div>
                            <div class="col-6">
                                <strong>Error Count:</strong> <span t-field="o.error_count" class="text-danger"/>
                            </div>
                        </div>
                        
                        <div class="row mt-4">
                            <div class="col-12">
                                <h4>Operation Details</h4>
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Invoice Code</th>
                                            <th>Status</th>
                                            <th>Error Message</th>
                                            <th>Duration</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="o.log_line_ids" t-as="line">
                                            <td><span t-field="line.record_name"/></td>
                                            <td>
                                                <span t-if="line.state == 'success'" class="text-success">✅ Success</span>
                                                <span t-else="" class="text-danger">❌ Failed</span>
                                            </td>
                                            <td><span t-field="line.error_message"/></td>
                                            <td><span t-field="line.duration"/> seconds</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <record id="action_bulk_operation_log_report" model="ir.actions.report">
        <field name="name">Bulk Operation Report</field>
        <field name="model">bulk.operation.log</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">z_invoice.bulk_operation_log_report_template</field>
        <field name="report_file">z_invoice.bulk_operation_log_report_template</field>
        <field name="print_report_name">'Bulk Operation Report - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_bulk_operation_log"/>
        <field name="binding_type">report</field>
    </record>
</odoo> 