<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- QWeb Reports -->
        <record id="action_report_account_invoice" model="ir.actions.report">
            <field name="name">Invoice (VN)</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">z_invoice.report_account_invoice</field>
            <field name="report_file">z_invoice.report_account_invoice</field>
            <field name="attachment"/>
            <field name="binding_model_id" ref="model_account_move"/>
            <field name="binding_type">report</field>
            <field name="print_report_name">'%s'%(object.code)</field>
        </record>

        <!-- Override existing report to make it inactive -->
        <record id="account.account_invoices_without_payment" model="ir.actions.report">
            <field name="binding_model_id" eval="False"/>
        </record>
        <record id="account.account_invoices" model="ir.actions.report">
            <field name="binding_model_id" eval="False"/>
        </record>
        <record id="action_report_account_invoice" model="ir.actions.report">
            <field name="binding_model_id" eval="False"/>
        </record>
    </data>
</odoo>