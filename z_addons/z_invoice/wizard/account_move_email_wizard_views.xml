<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_email_wizard_form" model="ir.ui.view">
        <field name="name">account.move.email.wizard.form</field>
        <field name="model">account.move.email.wizard</field>
        <field name="arch" type="xml">
            <form string="Send Invoice Email">
                <sheet>
                    <group>
                        <group>
                            <field name="move_id" invisible="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="customer_name" readonly="1"/>
                            <field name="place_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="customer_email" placeholder="Enter customer email address"/>
                        </group>
                    </group>
                    <div class="alert alert-info" role="alert">
                        <strong>Lưu ý:</strong> Vui lòng kiểm tra email trước khi gửi. Email sẽ được gửi đến địa chỉ email đã nhập.
                    </div>
                </sheet>
                <footer>
                    <button name="action_send_email" string="Send Email" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_account_move_email_wizard" model="ir.actions.act_window">
        <field name="name">Thông tin email</field>
        <field name="res_model">account.move.email.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_move_id': active_id}</field>
    </record>
</odoo> 