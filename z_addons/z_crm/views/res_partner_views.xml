<odoo>
    <data>
        <record id="z_crm_partner_form" model="ir.ui.view">
            <field name="name">res.partner.crm.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="z_partner.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Task Template" name="task_template">
                        <field name="task_template_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="code"/>
                                <field name="content"/>
                                <field name="execute_time"/>
                                <field name="crm_queue_id" string="Queue"/>
                                <button name="action_open_queue" type="object" icon="fa-cog text-primary"/>
                            </tree>
                        </field>
                    </page>
                    <page string="ZNS Template" name="zns_template">
                        <field name="zns_template_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="code"/>
                                <field name="body" widget="html"/>
                                <field name="execute_time"/>
                                <field name="crm_queue_id" string="Queue"/>
                                <button name="action_open_queue" type="object" icon="fa-cog text-primary"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
