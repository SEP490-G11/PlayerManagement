<odoo>
    <data>

        <record id="z_crm_queue_list_view" model="ir.ui.view">
            <field name="name">z_crm_queue_list_view</field>
            <field name="model">z.crm.queue</field>
            <field name="arch" type="xml">
                <tree string="Queue" multi_edit="1" default_order="id desc">
                    <field name="name"/>
                    <field name="method"/>
                    <field name="template_name"/>
                    <field name="write_date"/>
                    <field name="msg_id"/>
                    <field name="partner_id"/>
                </tree>
            </field>
        </record>

        <record id="z_crm_queue_form_view" model="ir.ui.view">
            <field name="name">z_crm_queue_form_view</field>
            <field name="model">z.crm.queue</field>
            <field name="arch" type="xml">
                <form string="Queue">
                    <sheet>
                        <group class="mb-0 mt-4">
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="msg_id"/>
                                <field name="partner_id" widget="res_partner_many2one" readonly="1"/>
                                <field name="status" widget="boolean_toggle" readonly="0"/>
                                <field name="method" readonly="0"/>
                                <field name="execute_time" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Task Template" name="task_template" invisible="method == 'zns'">
                                <field name="task_template_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="code" readonly="1"/>
                                        <field name="content"/>
                                        <field name="execute_time" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="ZNS Template" name="zns_template" invisible="method == 'task'">
                                <field name="zns_template_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="code" readonly="1"/>
                                        <field name="body" widget="html"/>
                                        <field name="execute_time" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Logs" name="z_logs">
                                <field name="error_logs"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="z_crm_queue_search_view" model="ir.ui.view">
            <field name="name">z_crm_queue.search</field>
            <field name="model">z.crm.queue</field>
            <field name="arch" type="xml">
                <search string="">
                    <field name="partner_id"/>
                </search>
            </field>
        </record>

        <record id="z_crm_queue_action" model="ir.actions.act_window">
            <field name="name">CRM Queue</field>
            <field name="res_model">z.crm.queue</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="z_crm_queue_search_view"/>
        </record>

    </data>
</odoo>