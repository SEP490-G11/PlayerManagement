<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="z_crm_partner_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.crm.form.inherit</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='email_cc']" position="after">
                <field name="z_ticket_type"/>
            </xpath>
        </field>
    </record>
    <record id="z_crm_partner_tree" model="ir.ui.view">
        <field name="name">helpdesk.ticket.crm.tree.inherit</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_tickets_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="z_ticket_type"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_phone"/>
            </xpath>
        </field>
    </record>
</odoo>