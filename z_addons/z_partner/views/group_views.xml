<odoo>
    <data>
        <record id="view_group_customer_form" model="ir.ui.view">
            <field name="name">z_partner.group.form</field>
            <field name="model">z_partner.group</field>
            <field name="arch" type="xml">
                <form string="Group customer">
                    <sheet>
                        <group>
                            <group>
                                <field name="code" required="True"/>
                            </group>
                            <group>
                                <field name="name" required="True"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>

        <record id="view_group_partner_tree" model="ir.ui.view">
            <field name="name">z_partner.group.tree</field>
            <field name="model">z_partner.group</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Contacts" sample="1" multi_edit="1">
                    <field name="code" />
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="view_group_customer" model="ir.actions.act_window">
            <field name="name">Group customer</field>
            <field name="res_model">z_partner.group</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" eval="False"/>
        </record>

        <record id="action_group_table" model="ir.actions.client">
            <field name="name">Group table</field>
            <field name="tag">zen8.action_group_table</field>
        </record>
    </data>
</odoo>
