<odoo>
    <data>
        <record id="view_res_partner_filter" model="ir.ui.view">
            <field name="name">res.partner.select</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search string="Search Partner">
                    <field name="name"
                        filter_domain="['|', '|', '|', ('name', 'ilike', self), ('code', 'ilike', self), ('mobile', 'ilike', self), ('z_mobile', 'ilike', self)]" />
                    <separator string="Gender" />
                    <filter string="Male" domain="[('gender', '=', 'male')]" name="gender_male" />
                    <filter string="Female" domain="[('gender', '=', 'female')]"
                        name="gender_female" />
                    <separator />
                    <group expand="0" name="group_by" string="Group By">
                        <filter name="group_group_id" string="Group"
                            context="{'group_by': 'group_id'}" />
                        <filter name="group_gender" string="Gender" context="{'group_by': 'gender'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="view_partner_tree" model="ir.ui.view">
            <field name="name">res.partner.tree</field>
            <field name="model">res.partner</field>
            <field eval="8" name="priority" />
            <field name="arch" type="xml">
                <tree string="Contacts" default_order="create_date des" duplicate="False" js_class="tree_with_toast">
                    <field name="active" readonly="1" column_invisible="True"/>
                    <field name="group_id" widget="block_advance_search"/>
                    <field name="original_code" widget="block_advance_search"/>
                    <field name="customer_detail_widget" widget="customer_detail_field_bs"/>
                    <field name="contact_source" widget="block_advance_search"/>
                    <field name="approach_channel" widget="block_advance_search"/>
                    <field name="create_date" string="Created date" widget="block_advance_search"/>
                </tree>
            </field>
        </record>

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="priority" eval="-1" />
            <field name="arch" type="xml">
                <form string="Partners" duplicate="False" js_class="form_with_toast">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_button_box" name="button_box"/>
                            <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                            <field name="avatar_128" invisible="1"/>
                            <field name="image_1920" widget='image' class="oe_avatar" options='{"preview_image": "avatar_128"}'/>
                            <div class="oe_title mb24">
                                <field name="active" invisible="1" readonly="1"/>
                                <label for="name" string="Name" class="oe_asterisk"/>
                                <field name="name" invisible="1"/>
                                <h1>
                                    <field id="individual" options="{'line_breaks': False}" widget="text" class="text-break" name="name" default_focus="1" placeholder="Nhập họ tên khách hàng" required="True"/>
                                </h1>
                            </div>
                            <group>
                                <group>
                                    <field name="is_customer" invisible="1"/>
                                    <label for="mobile" string="Phone number" class="oe_asterisk"/>
                                    <field name="mobile" required="True" nolabel="1"/>
                                    <label for="group_id" string="Group" class="oe_asterisk"/>
                                    <field name="group_id" required="True" nolabel="1"/>
                                    <field name="contact_source" required="True"/>
                                    <field name="approach_channel" />
                                    <field name="gender" widget="radio" />
                                    <label for="date" string="Date of Birth"/>
                                    <field name="date" widget="date" placeholder="DD/MM/YYYY" nolabel="1"/>
                                </group>
                                <group>
                                    <field name="code"/>
                                    <field name="email"/>
                                    <field name="street" string="Address"/>
                                    <field name="job"/>
                                    <field name="comment" widget="Note"/>
                                </group>
                            </group>
                        <notebook>
                            <page name="general_information" string="General Information" invisible="1">
                                <div class="oe_button_box" name="button_box" />
                                <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger"
                                    invisible="active" />
                                <field name="avatar_128" invisible="1" />
                                <field name="image_1920" widget='image' class="oe_avatar"
                                    options='{"preview_image": "avatar_128"}' />
                                <div class="oe_title mb24">
                                    <field name="active" invisible="1" readonly="1" />
                                    <label for="name" string="Name" class="oe_asterisk" />
                                    <field name="name" invisible="1" />
                                    <h1>
                                        <field id="individual" options="{'line_breaks': False}"
                                            widget="text" class="text-break" name="name"
                                            default_focus="1" placeholder="Nhập họ tên khách hàng"
                                            required="True" />
                                    </h1>
                                </div>
                                <group>
                                    <group>
                                        <field name="is_customer" invisible="1" />
                                        <label for="group_id" string="Group" class="oe_asterisk" />
                                        <field name="group_id" required="True" nolabel="1" />
                                        <field name="contact_source" />
                                        <field name="approach_channel" />
                                        <field name="gender" widget="radio" />
                                        <label for="mobile" string="Phone number"
                                            class="oe_asterisk" />
                                        <field name="mobile" required="True" nolabel="1" />
                                        <label for="date" string="Date of Birth" />
                                        <field name="date" widget="date"
                                            placeholder="DD/MM/YYYY" nolabel="1" />
                                        <field name="street" string="Address" />
                                        <field name="job" />
                                        <field name="age" invisible="1" />
                                    </group>
                                    <group>
                                        <field name="code" />
                                        <field name="date_research" readonly="1" />
                                        <field name="research_id" />
                                        <field name="color_research" readonly="1" />
                                        <field name="comment" widget="Note" />
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>

        <record id="view_customers" model="ir.actions.act_window">
            <field name="name">Customer</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="view_res_partner_filter"/>
            <field name="domain">[('is_customer','=',True)]</field>
            <field name="context">{'default_is_customer':True}</field>
            <field name="view_id" eval="False" />
        </record>

        <record model="ir.actions.act_window.view" id="action_z_partner_tree">
            <field name="sequence" eval="2" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_partner_tree" />
            <field name="act_window_id" ref="view_customers" />
        </record>

        <record model="ir.actions.act_window.view" id="action_z_partner_form">
            <field name="sequence" eval="2" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_partner_form" />
            <field name="act_window_id" ref="view_customers" />
        </record>

        <record id="action_not_found" model="ir.actions.client">
            <field name="name">Not found</field>
            <field name="tag">zen8.action_not_found</field>
        </record>

        <record id="action_customer_table" model="ir.actions.client">
            <field name="name">Customer table</field>
            <field name="tag">zen8.action_customer_table</field>
        </record>
        <record id="privacy_lookup.ir_action_server_action_privacy_lookup_partner"
            model="ir.actions.server">
            <field name="binding_model_id" eval="False" />
        </record>

           <!-- <menuitem id="menu_z_order_combo_in_visit" name="Combo Order"
                sequence="10"
                action="z_combo.z_combo_order_action_form"
                parent="z_partner_menu_root" /> -->
    </data>
</odoo>