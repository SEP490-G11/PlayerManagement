<odoo>
  <data noupdate="1">

    <!-- Only Admins (base.group_system) can create branches -->
    <record id="rule_branch_admin_create_only" model="ir.rule">
      <field name="name">Only Admin Can Create Branch</field>
      <field name="model_id" ref="z_place.model_z_place_place"/>
      <field name="domain_force">[(1, '=', 1)]</field>
      <field name="groups" eval="[(4, ref('base.group_system'))]"/>
      <field name="perm_read" eval="1"/>
      <field name="perm_write" eval="1"/>
      <field name="perm_create" eval="1"/>
      <field name="perm_unlink" eval="1"/>
    </record>

    <!-- Deny all access to branch (Place) -->
    <!-- <record id="rule_deny_all_z_place_place" model="ir.rule">
      <field name="name">Deny All Access to Branch (Place)</field>
      <field name="model_id" ref="z_place.model_z_place_place"/>
      <field name="domain_force">[('id', '=', 0)]</field>
      <field name="groups" eval="[]"/>
      <field name="perm_read" eval="0"/>
      <field name="perm_write" eval="0"/>
      <field name="perm_create" eval="0"/>
      <field name="perm_unlink" eval="0"/>
    </record> -->

    <!-- All other users: no create, but can read/write/delete -->
    <record id="rule_branch_no_create_for_others" model="ir.rule">
      <field name="name">No Create Branch for Non-Admins</field>
      <field name="model_id" ref="z_place.model_z_place_place"/>
      <field name="domain_force">[(1, '=', 1)]</field>
      <field name="groups" eval="[]"/>
      <field name="perm_read" eval="1"/>
      <field name="perm_write" eval="1"/>
      <field name="perm_create" eval="0"/>
      <field name="perm_unlink" eval="1"/>
    </record>


  </data>
</odoo>