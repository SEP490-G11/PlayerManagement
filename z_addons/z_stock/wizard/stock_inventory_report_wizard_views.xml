<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View for Wizard -->
        <record id="view_stock_inventory_report_wizard_form" model="ir.ui.view">
            <field name="name">stock.inventory.report.wizard.form</field>
            <field name="model">stock.inventory.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Báo Cáo Xuất Nhập Tồn Kho">
                    <group>
                        <field name="location_id" domain="[('place_id', 'in', context.get('user_place_ids', []))]" options="{'no_create': True, 'no_open': True}"/>
                        <field name="date_from" widget="daterange" options="{'related_end_date': 'date_to'}"/>
                        <field name="date_to" widget="daterange" options="{'related_start_date': 'date_from'}"/>
                    </group>
                    <footer>
                        <button name="action_generate_report" string="Xem Báo Cáo" type="object" class="btn-primary"/>
                        <button name="action_export_excel" string="Xuất Excel" type="object" class="btn-primary"/>
                        <button string="Hủy" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action for Wizard -->
        <record id="action_stock_inventory_report_wizard" model="ir.actions.act_window">
            <field name="name">Báo cáo xuất nhập tồn kho</field>
            <field name="res_model">stock.inventory.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>
    </data>
</odoo>
