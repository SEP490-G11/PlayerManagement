<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="z_stock_product_product_tree_view_inherit" model="ir.ui.view">
        <field name="name">product.product.tree.inherited</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='standard_price']" position="attributes">
                 <attribute name="column_invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='virtual_available']" position="attributes">
                  <attribute name="column_invisible">1</attribute>
            </xpath>
        </field>
    </record>
    <record id="z_stock_product_normal_form_view_inherit" model="ir.ui.view">
        <field name="name">stock.product.product.tree.inherited</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="z_product.z_product_normal_form_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='instruction']" position="attributes">
                 <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='instruction']" position="after">
                 <field name="usage_id" invisible="detailed_type != 'product'"/>
                 <field name="detailed_type" invisible="1"/>
            </xpath>
        </field>
    </record>
    <record id="z_optho_product_template_form_view" model="ir.ui.view">
        <field name="name">optho_product_template_form_view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                 <field name="supplier_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>
</odoo>
