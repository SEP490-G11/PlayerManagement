<odoo>
    <data>

        <record id="z_usage_list_view" model="ir.ui.view">
            <field name="name">z.usage.list.view</field>
            <field name="model">z.usage</field>
            <field name="arch" type="xml">
                <tree string="Usage" js_class="tree_with_toast" multi_edit="1" editable="top">
                    <field name="id" widget="handle"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="z_usage_action" model="ir.actions.act_window">
            <field name="name">Usage</field>
            <field name="res_model">z.usage</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="z_usage_menu" name="Usage" action="z_usage_action"
                  parent="stock.menu_stock_inventory_control" sequence="110"/>
    </data>
</odoo>