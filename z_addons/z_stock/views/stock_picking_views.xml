<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_picking_form_inherited" model="ir.ui.view">
        <field name="name">stock.picking.form.inherited</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="domain">[("supplier_rank", ">", 0)]</attribute>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="domain">[('is_combo', '=', False)]</attribute>
            </xpath>
            <xpath expr="//header/widget[@name='signature'][1]" position="attributes">
                <attribute name="invisible">not id or state != 'done'</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']"
                   position="after">
                <field name="place_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='location_id'][2]"
                   position="attributes">
                   <attribute name="domain">[('place_id', 'in', context.get('user_place_ids', []))]</attribute>
            </xpath>
            <xpath expr="//field[@name='location_dest_id'][2]"
                   position="attributes">
                   <attribute name="domain">[('place_id', 'in', context.get('user_place_ids', []))]</attribute>
                   <attribute name="invisible">picking_type_code == 'internal' or picking_type_code == 'outgoing'</attribute>
            </xpath>
            <xpath expr="//field[@name='location_id'][@groups='stock.group_stock_multi_locations']"
                   position="attributes">
                <attribute name="readonly">state == 'done' or (state == 'assigned' and picking_type_code == 'internal')</attribute>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']"
                   position="attributes">
                <attribute name="readonly">(state == 'done' and is_locked) or (state == 'assigned' and picking_type_code == 'internal')</attribute>
            </xpath>
            <xpath expr="//field[@name='location_id']"
                   position="attributes">
                   <attribute name="domain">[('place_id', 'in', context.get('user_place_ids', []))]</attribute>
            </xpath>
            <xpath expr="//field[@name='location_dest_id'][2]"
                   position="after">
                <field name="location_dest_id" 
                    options="{'no_create': True}" 
                    groups="stock.group_stock_multi_locations" 
                    readonly="state == 'done' or (state == 'assigned' and picking_type_code == 'internal')" 
                    invisible="picking_type_code != 'internal' or picking_type_code == 'incoming'"/>
                   
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_uom']"
                   position="attributes">
                <attribute name="readonly">True</attribute>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_origin_so"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-file-text-o">
                    <field string="Chứng từ gốc (SO)" name="origin_so_count" widget="statinfo"/>
                </button>
                <button name="action_view_related_invoices"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-file-invoice">
                    <field string="Hóa đơn" name="invoice_count" widget="statinfo"/>
                </button>
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="approver_ids_domain" invisible="1"/>
                <field name="approver_ids" string="Người phê duyệt" 
                domain="approver_ids_domain"
                widget="many2many_tags"
                options="{'no_create': True, 'no_create_edit': True}" 
                invisible="picking_type_code != 'internal'"/>
            </xpath>
            <xpath expr="//button[@name='button_validate']" position="before">
                <field name="is_not_approver" invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='button_validate']" position="attributes">
                <!-- only visible for the approver in internal pickings -->
                <attribute name="invisible">
                (is_not_approver and picking_type_code == 'internal') or state in ('draft', 'confirmed', 'done', 'cancel')
                </attribute>
            </xpath>
            <xpath expr="//button[@name='button_validate' and contains(@class, 'o_btn_validate')]"
                   position="attributes">
                <attribute name="invisible">(picking_type_code == 'internal') or state in ('waiting', 'assigned', 'done', 'cancel')</attribute>
            </xpath>
        </field>
    </record>
    <record id="stock.menu_stock_root" model="ir.ui.menu">
        <field name="web_icon">stock,static/description/icon.png</field>
    </record>

</odoo>
