<odoo>
    <data>
        <record id="z_service_code_tree_view" model="ir.ui.view">
            <field name="name">z_service_code_tree_view</field>
            <field name="model">service.code</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="service_name"/>
                </tree>
            </field>
        </record>
        <record id="z_service_code_action" model="ir.actions.act_window">
            <field name="name">Service Code</field>
            <field name="res_model">service.code</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="z_service_code_menu" name="Service Code" action="z_service_code_action"
                  parent="stock.menu_stock_inventory_control" sequence="200"/>

        <record id="z_obs_product_product_tree_view_inherit" model="ir.ui.view">
            <field name="name">z.obs.product.product.tree.inherited</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="z_product.z_product_product_tree_view_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vietmis_code']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
        <record id="z_obs_product_product_tree_view_inherit" model="ir.ui.view">
            <field name="name">z.obs.product.product.tree.inherited</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="z_product.z_product_product_tree_view_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vietmis_code']" position="attributes">
                    <attribute name="column_invisible">1</attribute>
                </xpath>
            </field>
        </record>
        <record id="z_obs_product_normal_form_view_inherit" model="ir.ui.view">
            <field name="name">z.obs.product.template.tree.inherited</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="z_product.z_product_normal_form_view_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vietmis_code']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
        <record id="z_obs_product_normal_form_view_inherit2" model="ir.ui.view">
            <field name="name">z.obs.product.product.tree.inherited2</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_code']" position="before">
                    <field name="service_code" options="{ 'no_create': True , 'no_edit': True}"/>
                    <field name="service_name" invisible="1"/>
                </xpath>
            </field>
        </record>
        <menuitem id="stock.menu_product_variant_config_stock" active="False"/>
    </data>
</odoo>