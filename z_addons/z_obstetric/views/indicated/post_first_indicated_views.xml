<odoo>
    <data>
        <record id="z_obstetric_post_first_indicated_form_view" model="ir.ui.view">
            <field name="name">z_obstetric.post_first_indicated.form</field>
            <field name="model">z_obstetric.post_first_indicated</field>
            <field name="arch" type="xml">
                <form string="Post First Indicated"
                    js_class="form_with_toast"
                    name="Post First Indicated Template"
                    delete="False"
                    duplicate="False" create="False">
                    <sheet string="Post First Indicated">
                        <notebook>
                            <page string="General Information" name="general">
                                <div class="row gy-3">
                                    <div class="col-4">
                                        <div class="o_form_label oe_asterisk mb-1">Examiner</div>
                                        <field name="examiner_id" string=""
                                            class="form-control trans-input w-100" />
                                    </div>
                                    <div class="col-4">
                                        <div class="o_form_label mb-1">Ultrasonographer</div>
                                        <field name="optometrist_id" string=""
                                            class="form-control trans-input w-100" />
                                    </div>
                                    <div class="col-4">
                                        <div class="o_form_label oe_asterisk mb-1">Examination date</div>
                                        <field name="examination_date" string=""
                                            class="form-control trans-input w-100"
                                            readonly="id" />
                                    </div>
                                    <h3 class="col-12 mt-4 mb-3 fw-bolder">Examination results</h3>
                                    <div class="col-12">
                                        <div class="row gy-2">
                                            <h4 class="col-12 mt-1 mb-3">1. Pregnant</h4>
                                            <div class="col-2">
                                                <div class="o_form_label mb-1">Quantity</div>
                                            </div>
                                            <div class="col-10">
                                                <field widget="char_field_bs" class="w-100"
                                                    name="quantity_fetal" />
                                            </div>
                                            <div class="col-2">
                                                <div class="o_form_label mb-1">Position fetal</div>
                                            </div>
                                            <div class="col-10">
                                                <field widget="char_field_bs" class="w-100"
                                                    name="position_fetal" />
                                            </div>
                                            <div class="col-2">
                                                <div class="o_form_label mb-1">Heart</div>
                                            </div>
                                            <div class="col-10">
                                                <field widget="char_field_bs" class="w-100"
                                                    name="heart_fetal" />
                                            </div>
                                            <div class="col-2">
                                                <div class="o_form_label mb-1">Biparietal(BPD)</div>
                                            </div>
                                            <div class="col-10">
                                                <field widget="char_field_bs" class="w-100"
                                                    name="biparietal" />
                                            </div>
                                            <div class="col-2">
                                                <div class="o_form_label mb-1">Femur length(FL)</div>
                                            </div>
                                            <div class="col-10">
                                                <field widget="char_field_bs" class="w-100"
                                                    name="femur_length" />
                                            </div>
                                            <div class="col-2">
                                                <div class="o_form_label mb-1">Abdominal
                                                    circumference(AC)</div>
                                            </div>
                                            <div class="col-10">
                                                <field widget="char_field_bs" class="w-100"
                                                    name="abdominal_circumference" />
                                            </div>
                                            <div class="col-2">
                                                <div class="o_form_label mb-1">Weight</div>
                                            </div>
                                            <div class="col-10">
                                                <field widget="char_field_bs" class="w-100"
                                                    name="weight" />
                                            </div>
                                            <div class="col-2">
                                                <div class="o_form_label mb-1">Pregnant Age</div>
                                            </div>
                                            <div class="col-10">
                                                <field widget="char_field_bs" class="w-100"
                                                    name="pregnant_age" />
                                            </div>
                                            <div class="col-2">
                                                <div class="o_form_label mb-1">Expected Birth</div>
                                            </div>
                                            <div class="col-10">
                                                <field widget="char_field_bs" class="w-100"
                                                    name="expected_birth" />
                                            </div>
                                            <h4 class="col-12 mt-4 mb-3">2. Conception part</h4>
                                            <div class="col-2">
                                                <div class="o_form_label mb-1">Amniotic Sac</div>
                                            </div>
                                            <div class="col-10">
                                                <field widget="char_field_bs" class="w-100"
                                                    name="amniotic_sac" />
                                            </div>
                                            <!-- Hidden this field -->
                                            <!-- <div class="col-2">
                                                <div class="o_form_label mb-1">Placenta</div>
                                            </div> -->
                                            <!-- <div class="col-10">
                                                <field widget="char_field_bs" class="w-100"
                                                    name="placenta" />
                                            </div> -->
                                            <div class="col-2">
                                                <div class="o_form_label mb-1">Placanta position</div>
                                            </div>
                                            <div class="col-10">
                                                <field widget="char_field_bs" class="w-100"
                                                    name="placenta_position" />
                                            </div>
                                            <div class="col-2">
                                                <div class="o_form_label mb-1">Maturity Level</div>
                                            </div>
                                            <div class="col-10">
                                                <field name="maturity_level" string=""
                                                    class="form-control trans-input w-100" />
                                            </div>
                                            <h4 class="col-12 mt-4 mb-3">3. Other image</h4>
                                            <field rows="3" name="other_image"
                                                widget="text_field_bs"
                                                class="w-100 fw-bolder"
                                                placeholder="Enter description" />
                                            <div class="col-2">
                                                <div class="o_form_label mb-1">Image</div>
                                            </div>
                                            <div class="col-10">
                                                <field name="image_result_upload" widget="many2many_binary_preview" options="{'reload': false }"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>