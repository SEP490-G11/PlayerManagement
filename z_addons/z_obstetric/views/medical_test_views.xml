<odoo>
    <record id="z_obstetric_medical_test_form_view" model="ir.ui.view">
        <field name="name">z_appointment.appointment.test.line</field>
        <field name="model">z_obstetric.medical_test</field>
        <field name="arch" type="xml">
            <form string="Indicated"
                name="Indicated Template">
                <sheet string="Indicated">
                    <style>
                        .w-300 {
                        width: 300px;
                        }
                    </style>
                    <div>
                        <div class="d-flex gap-4 mb-4">
                            <div class="flex-grow-1">
                                <h2 class="fw-bold  mb-3">Medical Test</h2>
                                <field name="medical_test_line_ids">
                                    <tree editable="bottom" js_class="medical_record_tree">
                                        <field name="has_result" column_invisible="1" />
                                        <field name="service_id" can_create="True" can_write="True" />
                                        <button name="action_preview_result" type="object"
                                            class="btn btn-primary p-1 button-title-left"
                                            string="View result"
                                            title="Result" invisible="not has_result" />
                                        <button name="action_open_form" type="object"
                                            string="Upload"
                                            class="btn btn-secondary p-1 button-title-left"
                                            title="Result" invisible="has_result" />
                                    </tree>                              
                                </field>
                            </div>
                        </div>
                    </div>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </sheet>
            </form>
        </field>
    </record>
</odoo>