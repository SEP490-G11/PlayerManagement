<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="z_web.TextFieldBs">
        <t t-if="props.readonly">
            <span t-esc="props.record.data[props.name] or ''" class="form-control border-1" style="display: block; padding: .99rem .75rem; line-height: 1.5;" />
        </t>
        <t t-else="">
            <div t-ref="div">
                <textarea class="form-control border-1" t-att-class="{'o_field_translate': isTranslatable}" t-att-id="props.id" t-att-placeholder="props.placeholder" t-att-rows="rowCount" t-ref="textarea" />
                <t t-if="isTranslatable">
                    <TranslationButton fieldName="props.name" record="props.record" />
                </t>
            </div>
        </t>
    </t>

</templates>
